@page
@model DuelSysWeb.Pages.tournament.tournamentListModel
@{
}

<!-- ======= Services Section ======= -->
<section class="services">
    <div class="container">
        <div class="row">
            @for(int i=0; i < @Model.Tournaments.Count();i++){
                
                <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="200">
                            <div class="icon-box icon-box-blue">
                                <div class="icon"><i class="bx bx-world"></i></div>
                                <h4 class="title"><a asp-page="tournamentinfo" asp-route-id="@Model.Tournaments[i].getID()">@Model.Tournaments[i].getTournamentName()</a></h4>
                                <p class="description">@Model.Tournaments[i].getTournamentDescription()</p>
                            </div>
                            </div>
                        }
      </div>
   </div>
</section><!-- End Services Section -->