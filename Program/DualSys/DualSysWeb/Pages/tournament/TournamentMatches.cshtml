@page
@model DuelSysWeb.Pages.tournament.TournamentMatchesModel
@{
}

@if (@Model.leaderBoards.Count > 0)
{
    <br /><br />
    <table class="tmatches">
        <h2 class="tmatchesTitle">Current score board</h2>
        <thead>
            <th  class="tmatchRow">Player</th>
        </thead>
        <tbody>            
            
            @foreach(var board in Model.leaderBoards)
            { 
            <tr>
            <td class="tmatchRow">@board</td>
            </tr>
        }   
        </tbody>
    </table>
}

<br /><br />
<table class="tmatches">
        <h2 class="tmatchesTitle">Matches</h2>
<thead>
  <tr>
    <th class="tmatchRow">Home Player</th>
    <th class="tmatchRow">Away Player</th>
    <th class="tmatchRow">Home Score</th>
    <th class="tmatchRow">Away Score</th>
  </tr>
</thead>
<tbody>
 


@if(@Model.Matches.Count>0){
    @foreach (var item in Model.Matches)
    {
      <tr>
    <td class="tmatchRow">@item.GetPlayer1().getFname()     @item.GetPlayer1().getLname()</td>
    <td class="tmatchRow">@item.GetPlayer2().getFname()     @item.GetPlayer2().getLname()</td>
    <td class="tmatchRow">@item.GetScore1()</td>
    <td class="tmatchRow">@item.GetScore2()</td>
  </tr>
    }
}
</tbody>
</table>