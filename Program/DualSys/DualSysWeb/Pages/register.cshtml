@page
@model DuelSysWeb.Pages.registerModel
@{
    
}
<div class="container-fluid">
    <div class="row">

        <div class="col-sm-6 login-section-wrapper">
            <div class="login-wrapper my-auto">
                <h1 class="login-title">Register</h1>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" type="email" name="email" id="email" class="form-control" placeholder="email@example.com">
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" name="password" id="password" class="form-control" placeholder="enter your passsword">
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Fname"></label>
                        <input asp-for="Fname" type="text" name="fname" id="fname" class="form-control" placeholder="enter your first name">
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Lname"></label>
                        <input asp-for="Lname" type="text" name="lname" id="lname" class="form-control" placeholder="enter your last name">
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for=Birthdate></label>
                        <input asp-for=Birthdate type="date" name=birthdate id=birthdate class="form-control" placeholder="enter your birthdate">
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Gender"></label>
                        <input asp-for="Gender" type="text" maxlength=2 name="gender" id="gender" class="form-control" placeholder="enter your gender (max 2 letters)">
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" type="text" name="address" id="address" class="form-control" placeholder="enter your address +house num">
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Town"></label>
                        <input asp-for="Town" type="text" name="town" id="town" class="form-control" placeholder="enter your town ">
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Team"></label>
                        <input asp-for="Team" type="text" name="team" id="team" class="form-control" placeholder="enter your team">
                    </div>
                    <input name="register" id="login" class="btn btn-block login-btn" type="submit" value="Register">                    
                </form>
            </div>
</div>

<div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="~/assets/img/hero-bg.jpg" alt="login image" class="login-img">
          
        </div>

</div>
</div>